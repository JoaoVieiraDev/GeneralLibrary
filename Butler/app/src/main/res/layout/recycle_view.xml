<?xml version="1.0" encoding="utf-8"?>
<android.support.design.circularreveal.CircularRevealGridLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/taskbutton_background"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:src="@drawable/bowtie" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:paddingTop="5dp"
                    android:src="@drawable/cogwheel" />

                <TextView
                    android:id="@+id/task_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/abril_fatface"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:text="Task1"
                    android:textColor="@color/grey" />


            </LinearLayout>
            <TextView
                android:id="@+id/task_device"
                android:layout_width="wrap_content"
                android:layout_height="10dp"
                android:fontFamily="@font/abril_fatface"
                android:gravity="center"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:text="Task Device" />
        </LinearLayout>


</android.support.design.circularreveal.CircularRevealGridLayout>